                                <form>
                                    <button type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-block mb-4">
                                        <i class="bi bi-cart-check"></i>
                                        Add To Cart
                                    </button>
                                    <button type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-block mb-4">
                                        <i class="bi bi-heart"></i>
                                        Wishlist
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
